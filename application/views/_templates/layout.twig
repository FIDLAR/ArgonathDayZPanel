<!DOCTYPE html>
<html>
	<head>
		<!-- Information -->
		<title>{{ constant('SITE_NAME') }}</title>
		<!-- META -->
		<meta charset="utf-8">
    	<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="description" content="">

		<link rel="icon" type="image/png" href="favicon.ico">

		<!-- CSS -->
		<link rel="stylesheet" type="text/css" href="{{ constant('BASE_URL') }}public/css/bootstrap.min.css">
		<link rel="stylesheet" href="{{ constant('BASE_URL') }}public/css/site.css">

	</head>
	<body>
	
		<!-- Content -->
		<div class="container">
			<div class="header">
		        <ul class="nav nav-pills pull-right" role="tablist">
		          <li role="presentation"><a href="{{ constant('BASE_URL') }}">Home</a></li>
		          <li role="presentation"><a href="{{ constant('BASE_URL') }}view/groups/">Groups</a></li>
		          <li role="presentation">
		          	<form action="{{ constant('BASE_URL') }}search/index/" method="GET">
		          		<input class="form-control input-sm" type="text" name="input_name" placeholder="Search" />
		          	</form>
		          </li>
		        </ul>
		        <h3 class="text-muted">{{ page.name|default('Argonath DayZ') }}</h3>
		    </div>
		    <div class="alert alert-info">
		    	<strong>Alpha Version</strong><br />
		    	This site may encounter unexpected errors. Please report them immediately to [WS]Teddy.
		    	</div>
		    <div class="well well-lg">
				{% block content %} {% endblock %}
			</div>
		</div>

		<!-- JavaScript -->
		<script src="{{ constant('BASE_URL') }}public/js/jquery.js"></script>
	</body>	
</html>